<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greywatertexture"
    tools:context="com.example.simon.battleships.createGameActivity">

    <TextView
        android:id="@+id/ipText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:text="Your Code"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/IP"
        android:layout_width="251dp"
        android:layout_height="76dp"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/ip_text_background"
        android:ems="15"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/ipText"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="casual"
        android:textColor="#2479E7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textCursorDrawable="@null"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.6" />

</android.support.constraint.ConstraintLayout>
