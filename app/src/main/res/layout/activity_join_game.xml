<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greywatertexture"
    tools:context="com.example.simon.battleships.joinGameActivity">

    <TextView
        android:id="@+id/ipText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:text="Enter Code"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstIP"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ip_text_background"
        android:ems="15"
        android:inputType="phone"
        app:layout_constraintRight_toLeftOf="@+id/secondIP"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ipText"
        android:fontFamily="casual"
        android:textColor="#2479E7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textCursorDrawable="@null"/>

    <EditText
        android:id="@+id/secondIP"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ip_text_background"
        android:ems="15"
        android:inputType="phone"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ipText"
        tools:layout_editor_absoluteX="305dp"
        android:fontFamily="casual"
        android:textColor="#2479E7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textCursorDrawable="@null"/>

    <Button
        android:id="@+id/findHostButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/button_style"
        android:paddingTop="5dp"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:text="CONNECT"
        android:textColor="#2479E7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/firstIP"/>

</android.support.constraint.ConstraintLayout>
