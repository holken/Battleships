<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greywatertexture"
    tools:context="com.example.simon.battleships.joinGameActivity">

    <TextView
        android:id="@+id/ipText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:text="Enter Code"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/IP"
        android:layout_width="252dp"
        android:layout_height="74dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ip_text_background"
        android:ems="15"
        android:inputType="numberPassword"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/ipText"
        android:fontFamily="casual"
        android:textColor="#2479E7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="70dp" />

    <Button
        android:id="@+id/findHostButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="253dp"
        android:layout_height="52dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/button_style"
        android:paddingTop="5dp"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:text="CONNECT"
        android:textColor="#2479E7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/IP"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.508" />

</android.support.constraint.ConstraintLayout>
